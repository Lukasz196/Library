{% extends "::base.html.twig" %}
{% form_theme form 'bootstrap_3_horizontal_layout.html.twig' %}

{% block content %}
    {{ form_start(form) }}

    <div class="form-group">
        {{ form_label(form.name,'Nazwa gatunku', {attr: {class: 'form-control'}}) }}
        <div class="col-sm-4">
            {{ form_widget(form.name) }}
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-4">
            {{ form_row(form.save, { 'label': 'Zapisz', 'attr': {'class': 'btn btn-default'}}) }}
        </div>
    </div>

    {{ form_end(form) }}
{% endblock %}