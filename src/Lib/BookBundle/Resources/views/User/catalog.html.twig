{% extends "base.html.twig" %}

{% block content %}
    {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}
    {{ form_errors(form) }}

    <div class="form-group">
        {{ form_label(form.title, 'Tytuł', {'label_attr': {'class': 'col-lg-1 control-label'}}) }}
        <div class="col-lg-3">
            {{ form_widget(form.title, {'attr': {'class': 'form-control'}}) }}
        </div>
        {{ form_label(form.author, 'Autor', {'label_attr': {'class': 'col-lg-1 control-label'}}) }}
        <div class="col-lg-3">
            {{ form_widget(form.author, {'attr': {'class': 'form-control'}}) }}
        </div>
        {{ form_label(form.isbn, 'ISBN', {'label_attr': {'class': 'col-lg-1 control-label'}}) }}
        <div class="col-lg-2">
            {{ form_widget(form.isbn, {'attr': {'class': 'form-control'}}) }}
        </div>
        {{ form_widget(form.search, {'attr': {'class': 'btn btn-default'}}) }}
    </div>
    {#<div class="form-group">
    </div>#}

    {{ form_end(form) }}

    {% if books is null %}
        <h2>Brak wyników wyszukiwania</h2>
    {% else %}
        {{ include('LibBookBundle::bookList.html.twig', {'columnSize': 'col-lg-6'}) }}
    {% endif %}
{% endblock %}