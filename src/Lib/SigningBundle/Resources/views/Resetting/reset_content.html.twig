        <form action="{{ path('fos_user_resetting_reset', {'token': token}) }}" {{ form_enctype(form) }} method="POST" class="custom_form_reg form-horizontal col-lg-12 fos_user_resetting_reset">
            <h1 class='custom_h1_log'>
